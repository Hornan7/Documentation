 [Unit]
Description       = Sancho Node Service
After             = multi-user.target 

 [Service]
Type              = simple
Environment       = LD_LIBRARY_PATH="/usr/local/lib:$LD_LIBRARY_PATH"
Environment       = PKG_CONFIG_PATH="/usr/local/lib/pkgconfig:$PKG_CONFIG_PATH"
Environment       = PATH="/home/tutorial/.local/bin/:$PATH"
ExecStart         = /home/tutorial/.local/bin/cardano-node run --config /home/tutorial/cardano-source/cardano-node/sanchotest/config.json --topology /home/tutorial/cardano-source/cardano-node/sanchotest/topology.json --database-path /home/tutorial/cardano-source/cardano-node/db/ --socket-path /home/tutorial/cardano-source/cardano-node/db/node.socket --host-addr 0.0.0.0 --port 6000 --shelley-kes-key /home/tutorial/.sanchockeys/kes.skey --shelley-vrf-key /home/tutorial/.sanchockeys/vrf.skey --shelley-operational-certificate /home/tutorial/.sanchockeys/node.cert


KillSignal        = SIGINT
RestartKillSignal = SIGINT
TimeoutStopSec    = 300
StandardOutput    = journal
StandardError     = journal
LimitNOFILE       = 32768
Restart           = on-failure
RestartSec        = 15
SyslogIdentifier  = sancho-node
User              = snode
Group             = tutorial

 [Install]
WantedBy          = multi-user.target
